<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Widget.Like" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/color_like_selector</item>
    </style>

    <style name="App.Widget.LikeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_like_selector</item>
        <item name="iconTint">@color/color_like_selector</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="App.Widget.ShareButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_share</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="App.Widget.IconToggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ic_more_vert_24</item>
        <item name="iconTint">@color/color_like_selector</item>
        <item name="minWidth">8dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
    </style>
</resources>